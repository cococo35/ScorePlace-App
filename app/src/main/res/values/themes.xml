<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Hanple" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>

    <style name="App.Custom.Indicator" parent="Widget.Material3.BottomNavigationView.ActiveIndicator">
        <item name="android:color">@color/darkmint</item>
    </style>

    <style name="Theme.Hanple" parent="Base.Theme.Hanple" />

    <style name="Theme.App.Starting" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/white</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/ic_logo</item>
        <item name="postSplashScreenTheme">@style/Theme.Hanple</item>
    </style>

    <style name="SpinnerTheme" parent="android:Widget.Spinner">
        <item name="android:textColorPrimary">@color/white</item>
    </style>

    <style name="etGeneral">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_marginStart">30dp</item>
        <item name="android:layout_marginEnd">30dp</item>
        <item name="android:background">@drawable/et_selector</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:padding">10dp</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColorHint">@color/et_text_selector</item>
        <item name="android:fontFamily">@font/pretendard_regular</item>
    </style>

    <style name="btnGeneral1st">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">52dp</item>
        <item name="android:layout_marginStart">30dp</item>
        <item name="android:layout_marginEnd">30dp</item>
        <item name="android:background">@drawable/btn_1st_selector</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">10dp</item>
        <item name="android:textColor">@color/btn_1st_text_selector</item>
        <item name="android:textSize">18sp</item>
        <item name="android:elevation">3dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/pretendard_regular</item>
    </style>

    <style name="btnGeneral2nd">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">52dp</item>
        <item name="android:layout_marginStart">30dp</item>
        <item name="android:layout_marginEnd">30dp</item>
        <item name="android:background">@drawable/btn_2nd_selector</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">10dp</item>
        <item name="android:textColor">@color/btn_2nd_text_selector</item>
        <item name="android:textSize">18sp</item>
        <item name="android:elevation">3dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/pretendard_regular</item>
    </style>
</resources>