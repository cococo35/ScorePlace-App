<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".ui.onboarding.SignUpActivity">

    <ImageView
        android:id="@+id/iv_back"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/ic_back_8x12dp"
        android:layout_margin="32dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/onboarding_welcome"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:textAlignment="center"
        android:textColor="@color/darkblue"
        android:fontFamily="@font/pretendard_regular"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/iv_back"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <LinearLayout
        android:id="@+id/ll_edit_texts"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_title"
        android:layout_marginTop="20dp">

        <EditText
            android:id="@+id/et_email"
            style="@style/etGeneral"
            android:inputType="textEmailAddress"
            android:fontFamily="@font/pretendard_regular"
            android:textSize="18sp"
            android:hint="@string/email" />
        <EditText
            android:id="@+id/et_password"
            style="@style/etGeneral"
            android:layout_marginTop="12dp"
            android:inputType="textPassword"
            android:fontFamily="@font/pretendard_regular"
            android:textSize="18sp"
            android:hint="@string/password" />
        <EditText
            android:id="@+id/et_username"
            style="@style/etGeneral"
            android:layout_marginTop="12dp"
            android:fontFamily="@font/pretendard_regular"
            android:textSize="18sp"
            android:hint="@string/nickname" />
        <TextView
            android:id="@+id/tv_error"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="이메일을 작성해 주세요."
            android:textColor="@color/darkblue"
            android:fontFamily="@font/pretendard_regular"
            android:textSize="14sp"
            android:layout_marginTop="12dp"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:maxLines="1"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_buttons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:orientation="vertical"
        android:layout_marginBottom="36dp">
        <CheckBox
            android:id="@+id/cb_privacy_policy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/check_privacy_policy"
            android:textSize="16dp"
            android:fontFamily="@font/pretendard_bold"
            android:textColor="@color/darkgray"
            android:layout_marginTop="12dp"
            android:layout_marginLeft="25dp"/>
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_private_policy"
            style="@style/btnGeneral2nd"
            android:text="@string/onboarding_personal_info"
            android:textSize="20sp"
            android:layout_marginTop="12dp"/>
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_sign_up"
            style="@style/btnGeneral4th"
            android:enabled="false"
            android:text="@string/onboarding_sign_up"
            android:textSize="20sp"
            android:layout_marginTop="8dp"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="12dp"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>