<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/searchPeopleFragment"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.search.SearchPeopleFragment">

    <TextView
        android:id="@+id/tv_search_people_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="125dp"
        android:text="여행 성향을 알려주세요"
        android:fontFamily="@font/line_seed_bold"
        android:textSize="34sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatImageButton
        android:id="@+id/btn_search_people_button1"
        android:layout_width="22dp"
        android:layout_height="22dp"
        android:layout_marginTop="35dp"
        android:layout_marginStart="25dp"
        android:background="@drawable/ic_check_blank_20dp"
        app:layout_constraintTop_toBottomOf="@id/tv_search_people_title"
        app:layout_constraintStart_toStartOf="parent"/>

    <androidx.appcompat.widget.AppCompatImageButton
        android:id="@+id/btn_search_people_button2"
        android:layout_width="22dp"
        android:layout_height="22dp"
        app:layout_constraintTop_toBottomOf="@id/btn_search_people_button1"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="25dp"
        android:layout_marginTop="35dp"
        android:background="@drawable/ic_check_blank_20dp" />

    <androidx.appcompat.widget.AppCompatImageButton
        android:id="@+id/btn_search_people_button3"
        android:layout_width="22dp"
        android:layout_height="22dp"
        android:background="@drawable/ic_check_blank_20dp"
        app:layout_constraintTop_toBottomOf="@id/btn_search_people_button2"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="25dp"
        android:layout_marginTop="35dp" />

    <androidx.appcompat.widget.AppCompatImageButton
        android:id="@+id/btn_search_people_button4"
        android:layout_width="22dp"
        android:layout_height="22dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_search_people_button3"
        android:layout_marginStart="25dp"
        android:layout_marginTop="35dp"
        android:background="@drawable/ic_check_blank_20dp" />

    <androidx.appcompat.widget.AppCompatImageButton
        android:id="@+id/btn_search_people_button5"
        android:layout_width="22dp"
        android:layout_height="22dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_search_people_button4"
        android:layout_marginStart="25dp"
        android:layout_marginTop="35dp"
        android:background="@drawable/ic_check_blank_20dp" />

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cd_search_people_next"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:cardBackgroundColor="@color/darkmint"
        app:cardCornerRadius="15dp"
        android:layout_marginBottom="155dp"
        app:cardElevation="2dp"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="25dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/tv_search_people_next"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/next"
                android:fontFamily="@font/pretendard_regular"
                android:textSize="27sp"
                android:gravity="center"
                android:textStyle="bold"
                android:textColor="@color/white"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cd_search_people_skip"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:cardBackgroundColor="@color/gray"
        app:cardElevation="2dp"
        app:cardCornerRadius="15dp"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="25dp"
        android:layout_marginTop="25dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cd_search_people_next">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/tv_search_people_skip"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/skip"
                android:fontFamily="@font/pretendard_regular"
                android:textSize="27sp"
                android:gravity="center"
                android:textStyle="bold"
                android:textColor="@color/white"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>

    <TextView
        android:id="@+id/tv_search_people_description1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="한적한게 좋아요!"
        android:fontFamily="@font/pretendard_regular"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@id/btn_search_people_button1"
        app:layout_constraintTop_toTopOf="@id/btn_search_people_button1"
        app:layout_constraintBottom_toBottomOf="@id/btn_search_people_button1"
        android:layout_marginStart="25dp"/>

    <TextView
        android:id="@+id/tv_search_people_description2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="조금은 사람이 있으면 좋겠어요!"
        android:fontFamily="@font/pretendard_regular"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@id/btn_search_people_button2"
        app:layout_constraintTop_toTopOf="@id/btn_search_people_button2"
        app:layout_constraintBottom_toBottomOf="@id/btn_search_people_button2"
        android:layout_marginStart="25dp" />

    <TextView
        android:id="@+id/tv_search_people_description3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="적당한게 좋아요!"
        android:fontFamily="@font/pretendard_regular"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@id/btn_search_people_button3"
        app:layout_constraintTop_toTopOf="@id/btn_search_people_button3"
        app:layout_constraintBottom_toBottomOf="@id/btn_search_people_button3"
        android:layout_marginStart="25dp" />

    <TextView
        android:id="@+id/tv_search_people_description4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="사람이 많이 오가면 좋겠어요!"
        android:fontFamily="@font/pretendard_regular"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@id/btn_search_people_button4"
        app:layout_constraintTop_toTopOf="@id/btn_search_people_button4"
        app:layout_constraintBottom_toBottomOf="@id/btn_search_people_button4"
        android:layout_marginStart="25dp" />

    <TextView
        android:id="@+id/tv_search_people_description5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="핫플이 좋아요!"
        android:fontFamily="@font/pretendard_regular"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@id/btn_search_people_button5"
        app:layout_constraintTop_toTopOf="@id/btn_search_people_button5"
        app:layout_constraintBottom_toBottomOf="@id/btn_search_people_button5"
        android:layout_marginStart="25dp" />

</androidx.constraintlayout.widget.ConstraintLayout>