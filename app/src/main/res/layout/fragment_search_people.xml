<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/searchPeopleFragment"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.search.SearchPeopleFragment">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cd_search_people_density"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:cardBackgroundColor="@color/darkmint"
        app:cardCornerRadius="15dp"
        android:layout_marginTop="25dp"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="25dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/tv_search_people_density"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="여행 성향을 알려주세요"
                android:textSize="25sp"
                android:gravity="center"
                android:textStyle="bold"
                android:textColor="@color/white"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/iv_search_people_line"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        app:cardBackgroundColor="@color/gray"
        app:layout_constraintTop_toBottomOf="@id/cd_search_people_density"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="95dp"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="25dp" />
    
    <androidx.appcompat.widget.AppCompatImageButton
        android:id="@+id/btn_search_people_button1"
        android:layout_width="20dp"
        android:layout_height="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/iv_search_people_line"
        android:layout_marginBottom="25dp"
        android:layout_marginStart="25dp"
        android:background="@drawable/ic_check_blank_20dp" />

    <androidx.appcompat.widget.AppCompatImageButton
        android:id="@+id/btn_search_people_button2"
        android:layout_width="20dp"
        android:layout_height="20dp"
        app:layout_constraintStart_toEndOf="@id/btn_search_people_button1"
        app:layout_constraintEnd_toStartOf="@id/btn_search_people_button3"
        app:layout_constraintBottom_toBottomOf="@id/iv_search_people_line"
        android:layout_marginBottom="25dp"
        android:background="@drawable/ic_check_blank_20dp" />

    <androidx.appcompat.widget.AppCompatImageButton
        android:id="@+id/btn_search_people_button3"
        android:layout_width="20dp"
        android:layout_height="20dp"
        app:layout_constraintStart_toEndOf="@id/btn_search_people_button1"
        app:layout_constraintEnd_toStartOf="@id/btn_search_people_button5"
        app:layout_constraintBottom_toBottomOf="@id/iv_search_people_line"
        android:layout_marginBottom="25dp"
        android:background="@drawable/ic_check_blank_20dp" />

    <androidx.appcompat.widget.AppCompatImageButton
        android:id="@+id/btn_search_people_button4"
        android:layout_width="20dp"
        android:layout_height="20dp"
        app:layout_constraintStart_toEndOf="@id/btn_search_people_button3"
        app:layout_constraintEnd_toStartOf="@id/btn_search_people_button5"
        app:layout_constraintBottom_toBottomOf="@id/iv_search_people_line"
        android:layout_marginBottom="25dp"
        android:background="@drawable/ic_check_blank_20dp" />

    <androidx.appcompat.widget.AppCompatImageButton
        android:id="@+id/btn_search_people_button5"
        android:layout_width="20dp"
        android:layout_height="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/iv_search_people_line"
        android:layout_marginBottom="25dp"
        android:layout_marginEnd="25dp"
        android:background="@drawable/ic_check_blank_20dp" />

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cd_search_people_next"
        android:layout_width="120dp"
        android:layout_height="50dp"
        app:cardBackgroundColor="@color/darkmint"
        app:cardCornerRadius="15dp"
        android:layout_marginBottom="155dp"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="25dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/tv_search_people_next"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/next"
                android:textSize="25sp"
                android:gravity="center"
                android:textStyle="bold"
                android:textColor="@color/white"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>

    <TextView
        android:id="@+id/tv_search_people_description1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/iv_search_people_line"
        app:layout_constraintTop_toBottomOf="@id/iv_search_people_line"
        android:layout_marginTop="25dp"
        android:text="한적한게 좋아요~!"
        android:textSize="14sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_search_people_description2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="@id/iv_search_people_line"
        app:layout_constraintTop_toBottomOf="@id/iv_search_people_line"
        android:layout_marginTop="25dp"
        android:text="핫플이 좋아요~!"
        android:textSize="14sp"
        android:textStyle="bold" />

</androidx.constraintlayout.widget.ConstraintLayout>