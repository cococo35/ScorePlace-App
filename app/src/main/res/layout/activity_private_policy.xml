<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.onboarding.PrivatePolicyActivity">
    <!--약관 스크롤뷰 -->
    <ScrollView
        android:id="@+id/sv"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/neomint"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/ll_buttons">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="30dp">

            <!-- 스크롤 테스트를 위해 사이즈, 내용 임의로 집어넣음. -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/scroll_test"
                android:textSize="40dp"/>

        </LinearLayout>
    </ScrollView>

    <!-- 하단 버튼 -->
    <LinearLayout
        android:id="@+id/ll_buttons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:orientation="vertical"
        android:layout_marginBottom="12dp">
        <CheckBox
            android:id="@+id/cb_read_all"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/check_privacy_policy"
            android:textSize="16dp"
            android:fontFamily="@font/pretendard_bold"
            android:textColor="@color/darkgray"
            android:layout_marginTop="12dp"
            android:layout_marginLeft="25dp"/>
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_dismiss"
            style="@style/btnGeneral4th"
            android:text="@string/close"
            android:enabled="false"
            android:textSize="20sp"
            android:layout_marginTop="8dp"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="12dp"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>