<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/searchTimeFragment"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.search.SearchTimeFragment">

    <TextView
        android:id="@+id/tv_search_time_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="활동 시간대를 입력해주세요"
        android:fontFamily="@font/line_seed_bold"
        android:textSize="34sp"
        android:textStyle="bold"
        android:layout_marginTop="125dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_search_time_from_hour"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_search_time_title"
        android:fontFamily="@font/pretendard_regular"
        android:textSize="20sp"
        android:layout_marginTop="40dp"
        android:layout_marginStart="25dp"
        android:maxLength="2"
        android:text="00"
         />

    <TextView
        android:id="@+id/tv_search_time_point"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        app:layout_constraintStart_toEndOf="@+id/tv_search_time_from_hour"
        app:layout_constraintTop_toTopOf="@+id/tv_search_time_from_hour"
        app:layout_constraintBottom_toBottomOf="@+id/tv_search_time_from_hour"
        android:text=":"
        android:textStyle="bold"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/tv_search_time_from_minute"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        app:layout_constraintStart_toEndOf="@id/tv_search_time_point"
        app:layout_constraintTop_toTopOf="@id/tv_search_time_point"
        app:layout_constraintBottom_toBottomOf="@id/tv_search_time_point"
        android:layout_marginStart="5dp"
        android:fontFamily="@font/pretendard_regular"
        android:textSize="20sp"
        android:text="00"
        android:maxLength="2"
        android:clickable="false" />

    <TextView
        android:id="@+id/tv_search_time_from"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@+id/tv_search_time_from_hour"
        app:layout_constraintTop_toBottomOf="@+id/tv_search_time_from_hour"
        android:text="@string/time_from"
        android:textStyle="bold"
        android:fontFamily="@font/pretendard_regular"
        android:textSize="17sp"
        android:layout_marginTop="5dp"
        android:layout_marginStart="5dp" />

    <TextView
        android:id="@+id/tv_search_time_to_hour"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_search_time_from"
        android:layout_marginTop="10dp"
        android:layout_marginStart="25dp"
        android:maxLength="2"
        android:clickable="false"
        android:text="00"
        android:fontFamily="@font/pretendard_regular"
        android:textSize="20sp"
         />

    <TextView
        android:id="@+id/tv_search_time_point2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        app:layout_constraintStart_toEndOf="@+id/tv_search_time_to_hour"
        app:layout_constraintTop_toTopOf="@+id/tv_search_time_to_hour"
        app:layout_constraintBottom_toBottomOf="@+id/tv_search_time_to_hour"
        android:text=":"
        android:textStyle="bold"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/tv_search_time_to_minute"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        app:layout_constraintStart_toEndOf="@id/tv_search_time_point2"
        app:layout_constraintTop_toTopOf="@id/tv_search_time_point2"
        app:layout_constraintBottom_toBottomOf="@id/tv_search_time_point2"
        android:layout_marginStart="5dp"
        android:maxLength="2"
        android:clickable="false"
        android:text="00"
        android:fontFamily="@font/pretendard_regular"
        android:textSize="20sp"/>

    <TextView
        android:id="@+id/tv_search_time_to"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@+id/tv_search_time_to_hour"
        app:layout_constraintTop_toBottomOf="@+id/tv_search_time_to_minute"
        android:text="@string/time_to"
        android:textStyle="bold"
        android:fontFamily="@font/pretendard_regular"
        android:textSize="17sp"
        android:layout_marginTop="5dp"
        android:layout_marginStart="5dp" />


    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cd_search_time_skip"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:cardBackgroundColor="@color/gray"
        app:cardElevation="2dp"
        app:cardCornerRadius="15dp"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="25dp"
        android:layout_marginTop="25dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cd_search_time_next">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/tv_search_time_again_input"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="다시 입력하기"
                android:fontFamily="@font/pretendard_regular"
                android:textSize="27sp"
                android:gravity="center"
                android:textStyle="bold"
                android:textColor="@color/white"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cd_search_time_next"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:cardBackgroundColor="@color/darkmint"
        app:cardElevation="2dp"
        app:cardCornerRadius="15dp"
        android:layout_marginBottom="155dp"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="25dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/tv_search_time_next"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/next"
                android:fontFamily="@font/pretendard_regular"
                android:textSize="27sp"
                android:gravity="center"
                android:textStyle="bold"
                android:textColor="@color/white"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>
</androidx.constraintlayout.widget.ConstraintLayout>