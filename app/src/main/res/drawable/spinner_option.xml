<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="@color/darkblue" />
                    <stroke android:width="1dp" android:color="@color/white" />
                    <padding android:bottom="3dp" android:left="10dp" android:right="7dp" android:top="3dp" />
                    <corners android:radius="5dp" />
                    <size android:width="100dp" android:height="17dp" />
                </shape>
            </item>
            <item android:width="15dp" android:height="15dp" android:drawable="@drawable/down" android:gravity="center|right" />
        </layer-list>
    </item>
</selector>